<% include header %>
<div class = "container">
  <div class = "row">
    <h1 style = "text-align: center">Add New Video</h1>
    <div style = "width: 30%; margin: 25px auto;">
      <form action = "/media/new/video" method = "POST" enctype="multipart/form-data">
        <div class = "form-group">
          <div class = "form-group">
            <input class = "form-control" type = "text" name = "name" placeholder = "name">
          </div>
          <div class = "form-group">
            <input class = "form-control" type = "text" name = "duration" placeholder = "duration">
          </div>
          <div class = "form-group">
            <input class = "form-control" type = "text" name = "description" placeholder = "description">
          </div>
          <div class = "form-group">
            <input type = "file" name = "upload" accept = "application/x-zip-compressed,video/*">
          </div>
          <div class="form-group" style="display:none;">
            <input class="form-control" type="text" name="uploader" id="uploader">
          </div>
        <div class = "form-group">
          <button class = "btn btn-lg btn-primary btn-block">Upload</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){ $("#uploader").attr("value", Cookies.get("username")); });
</script>