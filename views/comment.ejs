<% include header %>
<div class = "container">
  <div class = "row">
    <h1 style = "text-align: center">Add Feedback</h1>
    <div style = "width: 30%; margin: 25px auto;">
      <form action = "/comments" method = "POST">
        <div class = "form-group">
          <input class = "form-control" type = "text" name = "comment" placeholder = "comment">
        </div>
        <div class = "form-group">
          <input class = "form-control" type = "number" name = "rating" min="1" max="10">
        </div>
        <div class="form-group" style="display:none">
          <input class="form-control" type="text" name="username" id="username">
        </div>
        <div class="form-group" style="display:none">
          <input class="form-control" type="text" name="mediaID" value="<%= results.mediaID %>">
        </div>
        <div class="form-group" style="display:none">
          <input class="form-control" type="text" name="type" value="<%= results.type %>">
        </div>
        <div class = "form-group">
          <button class = "btn btn-lg btn-primary btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){$("#username").attr("value", Cookies.get("username"));});
</script>