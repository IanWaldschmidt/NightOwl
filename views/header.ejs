<!DOCTYPE html>
<html>
  <head>
    <title>NightOwl</title>
    <!--Import Bootstrap and jQuery across the site-->
    <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/cookies.js"></script>
    <script>
      $(window).on('load', function(){
        if(document.cookie){ //User is signed in
          var username = Cookies.get("username");
          $('#login')[0].textContent = "Logout"
          $('#signup')[0].textContent = "Your Account"
          $('#signup')[0].href = '/users/' + username;
        }
      });
    </script>
  </head>
  <body>
    <nav class = "navbar navbar-default">
      <div class = "container-fluid">
        <div class = "navbar-header">
          <a class = "navbar-brand" href = "/home">NightOwl</a>
        </div>
        <div class = "collapse navbar-collapse">
          <ul class = "nav navbar-nav navbar-right">
            <li>
              <a href="/search">Search</a>
            </li>
            <li>
              <a href = "/media/new">Create Media</a>
            </li>
            <li>
              <a href = "/login" id="login">Login</a>
            </li>
            <li>
              <a href = "/signup" id="signup">Sign Up</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
